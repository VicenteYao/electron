diff --git a/base/BUILD.gn b/base/BUILD.gn
index c79a1e5a6ca98941bd0c600998fc1d5c41010bf5..3e8a9cc0f94362da8111c8fd3a6109ca6c13d9ca 100644
--- a/base/BUILD.gn
